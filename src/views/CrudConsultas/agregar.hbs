<form action="/CrudConsultas/agregar" method="POST">
    <div class="divisor-3">
        <input type="hidden" name="Paciente"value="{{paciente._id}}">
        <div class="contenedorAgregar">
            <div class="card background">
                <div class="card-header mx-auto letrasAgregar">
                    <h3>Datos Paciente</h3>
                </div>
                <div class="card-body">
                    <div class="form-group inputs">
                        <input type="text" class="form-control" placeholder="Enfermedad"
                            value="{{paciente.Nombre}}{{paciente.Apellido}}" autofocus>
                    </div>
                    <div class="form-group inputs">
                        <input type="text"  class="form-control" placeholder="Enfermedad"
                            value="{{paciente.DNI}}">
                    </div>
                    <div class="form-group inputs">
                        <input type="text" class="form-control" placeholder="Enfermedad"
                            value="{{paciente.NSS}}">
                    </div>
                </div>
            </div>
        </div>
        <div class="contenedorAgregar">
            <div class="card background">
                <div class="card-header mx-auto letrasAgregar">
                    <h3>Sintomas</h3>
                </div>
                <div class="card-body">
                    <div class="form-group inputs letrasscroll">
                        <select name="Sintomas" onchange="select()" id="usuario" size="9" multiple>
                            {{#each sintomas}}
                            <option>{{Nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
        </div>
<div class="contenedorAgregar">
            <div class="card background">
                <div class="card-header mx-auto letrasAgregar">
                    <h3>Signos</h3>
                </div>
                <div class="card-body">
                    <div class="form-group inputs letrasscroll">
                        <select name="Signos" onchange="select()" id="usuario" size="9" multiple>
                            {{#each signos}}
                            <option>{{Nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="contenedorAgregar">
            <div class="card background">
                <div class="card-header mx-auto letrasAgregar">
                    <h3>Pruebas de Laboratorio</h3>
                </div>
                <div class="card-body">
                    <div class="form-group inputs letrasscroll">
                        <select name="PruebaLab" onchange="select()" id="usuario" size="3">
                            {{#each pruebalab}}
                            <option>{{tipoPrueba}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
        </div>
            <div class="botton-form">
        <button class="forma" type="submit">
            Hacer Diagnostico
        </button>
    </div>
    </div>
</form>